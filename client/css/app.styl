@import 'nib'



body 
  padding-top 20px
  padding-bottom 40px

/* Custom container */
.container-narrow 
  margin 0 auto
  max-width 700px

.container-narrow > hr 
  margin 30px 0


/* Main marketing message and sign up button */
.jumbotron 
  margin 60px 0
  text-align center

.jumbotron h1 
  font-size 72px
  line-height 1

.jumbotron .btn 
  font-size 21px
  padding 14px 24px


/* Supporting marketing content */
.marketingfirst-child 
  margin 60px 0

.marketing p + h4 
  margin-top 28px

.marketing .headline 
  position relative

.marketing .headline h3 
  margin-top 45%

.marketing .headline.right * 
  text-align right

.center
  text-align center
  margin 20px 0
  background-color #2ecc71

a 
  text-decoration none

.footer 
  text-align center

#newTooru
  left 40%
  width 60%

#newTooru .modal-body
  height 400px
